@model IEnumerable<Recipe>
@{
    ViewBag.Title = "Emily's Baking Catalogue";

    // get value of id route segment
    int id = Convert.ToInt32(ViewContext.RouteData.Values["id"]);
}


<div class="text-center">

    <h2 class="display-4"> Emily's Baking Catalogue </h2>
    @foreach (Season s in ViewBag.Seasons)
    {
        string btnCss = (id == s.SeasonId) ? "btn btn-primary" : "btn btn-outline-primary";
        <a asp-action="Index" asp-route-id="@s.SeasonId" class="@btnCss mr-1 mb-2">@s.Name</a>
    }

</div>
<div class="mt-3">
    <a asp-action="Add" asp-controller="Recipe" class="ml-3"> Add Recipe </a>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th> Name </th>
                <th> Catergory </th>
                <th> Difficulty </th>
                <th> Season </th>
                <th> Favorite Recipe </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var recipe in Model)
            {
                <tr>
                    <td> @recipe.Name </td>
                    <td> @recipe.Category.Name </td>
                    <td> @recipe.Difficulty</td>
                    <td> @recipe.Season.Name </td>
                    <td> <a href=@recipe.RecipeUrl>@recipe.Name </a></td>
                    <td>
                        <a asp-action="Edit" asp-controller="Recipe" asp-route-id="@recipe.RecipeId"
                           class="btn btn-outline-primary">Edit</a>
                        <a asp-action="Delete" asp-controller="Recipe" asp-route-id="@recipe.RecipeId"
                           class="btn btn-outline-primary">Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>


